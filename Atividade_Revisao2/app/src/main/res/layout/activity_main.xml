<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marcador Pontos (Truco!)"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_orange_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tvPontosNos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="64sp"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvPontosEles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="64sp"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnMenosNos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/btnMaisNos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+1"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/btnMenosEles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="-1"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/btnMaisEles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+1"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_orange_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvVitoriasNos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="vitórias (0)"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvVitoriasEles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="vitórias (0)"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btnResetar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Zerar"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
