<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wood_texture"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- PONTUAÇÃO DO TIME NÓS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="639dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pontos_nos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_nos_menos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_nos_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- PONTUAÇÃO DO TIME ELES -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="938dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pontos_eles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_eles_menos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_eles_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- BOTÃO TRUCO -->
    <Button
        android:id="@+id/btn_truco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="Truco!"
        android:textSize="24sp" />

    <!-- CONTAGEM DE VITÓRIAS -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vitorias_nos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_vitorias_eles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
